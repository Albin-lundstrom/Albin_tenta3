<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <style>
        .card{
            margin: 0.25%;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand btn btn-danger" href="/">Home</a>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav d-flex" style="width: 100%;">
            <% if(data[0].admin === true){ %>
                <a href="./admin" class="p-2 nav-link">Admin center</a>
             <% }; %>
              <a class="nav-link ms-auto p-2" aria-current="page" href="./logout">Logout</a>
            </div>
          </div>
        </div>
    </nav>
    <div class="d-flex flex-row mb-3 flex-wrap">
        <% for(var i = 0; i < user.length; i++) { %>
            <a href="./blogpost<%=i%>">
                <button class="p-2 d-flex flex-column mb-3 card" style="width: 18rem; height: 30rem;">
                    <% if(user[i].img != null){ %>
                        <img  class="p-2 card-img-top"src="/img/<%= user[i].img %>" alt="img" style="width: 100%; height: 50%;">
                        <% }; %>
                        <div class="card-body p-2 d-flex flex-column">
                            <h5 class="card-title"><%= user[i].title %></h5>
                            <h4 class="p-2"><%= user[i].author %></h4>
                            <p class="p-2"><%= user[i].clickbait %></p>
                            <p class="p-2"><%= user[i].createdAt %></p>
                        </div>
                        <div class="p-2">
                            <% if(data[0].admin === true){ %>
                                <a class="p-2 btn btn-danger" href="./edit<%=i%>">Edit post</a>
                            <% }; %>
                        </div>
                </button>
            </a>
                <% }; %>
    </div>
</body>
</html>